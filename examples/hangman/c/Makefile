# Simple Makefile for hangman project
#  - Generated by Gemini
CC = gcc
CFLAGS = -Wall -Wextra -g
TARGET = hangman
OBJS = hangman.o main.o

.PHONY: all clean test

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJS)

hangman.o: hangman.c hangman.h
	$(CC) $(CFLAGS) -c hangman.c

main.o: main.c hangman.h
	$(CC) $(CFLAGS) -c main.c

test:
	mkdir -p build
	cd build && cmake .. && $(MAKE) && ./run_tests

clean:
	rm -f $(OBJS) $(TARGET)
	rm -rf build
